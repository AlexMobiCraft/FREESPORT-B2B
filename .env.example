# === FREESPORT DEVELOPMENT ENVIRONMENT VARIABLES ===
# Скопируйте этот файл в .env для локальной разработки
# При использовании Docker большинство значений уже настроены оптимально

# --- DJANGO CORE ---
DEBUG=True
SECRET_KEY=dev-secret-key-12345
DJANGO_SETTINGS_MODULE=freesport.settings.development
SITE_URL=http://localhost:3000

# --- DATABASE (PostgreSQL) ---
# Для Docker: DB_HOST=db
# Для локального запуска: DB_HOST=localhost
DB_NAME=freesport
DB_USER=postgres
DB_PASSWORD=password123
DB_HOST=db
DB_PORT=5432

# --- REDIS & CELERY ---
REDIS_PASSWORD=redis123
REDIS_URL=redis://:redis123@redis:6379/0
CELERY_BROKER_URL=redis://:redis123@redis:6379/0

# --- EMAIL (Development/Mailhog) ---
# Письма можно ловить по адресу http://localhost:8025
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=mailhog
EMAIL_PORT=1025
EMAIL_USE_TLS=False
DEFAULT_FROM_EMAIL=noreply@freesport.local

# --- FRONTEND (Next.js) ---
# URL для обращения фронтенда к API (Client-side)
NEXT_PUBLIC_API_URL=http://localhost:8001/api/v1
# Тема оформления: coming_soon | blue | electric_orange
ACTIVE_THEME=coming_soon

# --- 1C INTEGRATION (Stubs for Dev) ---
ONEC_DATA_DIR=/app/data/import_1c