{
  "system_meta": {
    "project_name": "FREESPORT E-Commerce",
    "version": "2.3.1 (Merged)",
    "design_philosophy": "Digital Brutalism & Kinetic Energy",
    "core_concept": "Geometric alignment is priority. Fonts are mechanically skewed (-12deg) rather than using native italics to ensure perfect parallel alignment with UI shapes."
  },
  "global_tokens": {
    "palette": {
      "primary": {
        "hex": "#FF6B00",
        "name": "Electric Orange",
        "usage": "CTAs, Active States, Hover Borders, Slider Thumbs"
      },
      "background": {
        "body": "#0F0F0F",
        "card": "#1A1A1A",
        "input": "transparent"
      },
      "text": {
        "primary": "#FFFFFF",
        "secondary": "#A0A0A0",
        "inverse": "#000000"
      },
      "border": {
        "subtle": "#333333",
        "active": "#FF6B00"
      }
    },
    "typography": {
      "font_family": {
        "display": "'Roboto Condensed', sans-serif",
        "body": "'Inter', sans-serif"
      },
      "weights": {
        "body_regular": 400,
        "display_bold": 700,
        "display_black": 900
      },
      "styles": {
        "display_style": "Normal (Not Italic). Skew is strictly achieved via CSS transform: skewX(-12deg)."
      }
    },
    "geometry": {
      "skew_angle": "-12deg",
      "counter_skew": "12deg",
      "border_radius": "0px"
    },
    "spacing": {
      "container_max_width": "1200px",
      "grid_gap": "20px",
      "section_padding": "20px",
      "block_margin": "80px"
    },
    "animation": {
      "default_curve": "cubic-bezier(0.25, 0.46, 0.45, 0.94)",
      "duration": "0.3s"
    }
  },
  "rules_engine": {
    "typography_usage": {
      "headers": "Roboto Condensed, Black, Uppercase. Style: Normal. Transform: SkewX(-12deg).",
      "body": "Inter, Regular, Normal Style, No Skew.",
      "price_tags": "Roboto Condensed, Bold. Style: Normal. Transform: SkewX(-12deg). Color: Primary."
    },
    "shape_logic": {
      "interactive_actions": "Skewed -12deg (Buttons, Badges, Checkboxes, Slider Tracks).",
      "data_entry": "Strictly Rectangular 0deg (Text Inputs, Price Inputs, Newsletter Form).",
      "images": "Strictly Square 1:1 containers, Object-fit: Cover."
    },
    "layout_fixes": {
      "flex_child_overflow": "Flex children containing grids or large images MUST have min-w-0 to prevent overflow. Without this, flex items expand to fit content instead of respecting parent constraints.",
      "grid_container_constraint": "Grid containers inside flex layouts require explicit width constraint (w-full or max-w-[value]) combined with min-w-0 on the flex parent."
    }
  },
  "components": {
    "buttons": {
      "structure": "Container skewed -12deg. Text inside must be counter-skewed (12deg) to appear upright. Font-style: Normal.",
      "variants": {
        "primary": "Background Orange (#FF6B00), Text Black, No Border.",
        "outline": "Background Transparent, Border 2px White, Text White. Hover: Border Orange, Text Orange."
      }
    },
    "inputs_text": {
      "shape": "Rectangular (0deg)",
      "style": "Transparent background, 1px Solid Border #333, White Text.",
      "typography": "Inter (Body font) for readability."
    },
    "inputs_selection": {
      "checkbox": {
        "container": "Skewed -12deg box (20x20px).",
        "check_mark": "Counter-skewed 12deg inside the box.",
        "label": "Inter font, Straight (0deg)."
      },
      "range_slider": {
        "track": "Dark Gray (#333), Skewed -12deg, Height 6px.",
