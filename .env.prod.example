# === ОБЩИЕ НАСТРОЙКИ (PRODUCTION) ===
DJANGO_ENVIRONMENT=production
# Сгенерируйте новый ключ: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=freesport-production-secret-key-change-this-in-production-2024
DEBUG=False

# === НАСТРОЙКИ БАЗЫ ДАННЫХ ===
DB_NAME=freesport
DB_USER=freesport_user
DB_PASSWORD=your-secure-db-password
DB_HOST=db
DB_PORT=5432
DB_SSLMODE=prefer

# === REDIS & CELERY ===
REDIS_PASSWORD=your-secure-redis-password
CELERY_BROKER_URL=redis://:your-secure-redis-password@redis:6379/0

# === НАСТРОЙКИ ДОМЕНОВ & БЕЗОПАСНОСТЬ ===
ALLOWED_HOSTS=freesport.ru,www.freesport.ru,your-server-ip,backend,nginx
CSRF_TRUSTED_ORIGINS=https://freesport.ru,https://www.freesport.ru
CORS_ALLOWED_ORIGINS=https://freesport.ru,https://www.freesport.ru
SECURE_SSL_REDIRECT=True

# === НАСТРОЙКИ EMAIL (PRODUCTION) ===
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=FREESPORT <noreply@freesport.ru>
SERVER_EMAIL=noreply@freesport.ru
ADMIN_EMAILS=admin@freesport.ru

# === ИНТЕГРАЦИЯ С 1С ===
# ONEC_API_URL=https://1c-server.domain.com/base/hs/exchange
# ONEC_USERNAME=exchange_user
# ONEC_PASSWORD=exchange_password
ONEC_DATA_DIR=/home/freesport/freesport/data/import_1c

# === URL И ТЕМЫ ===
SITE_URL=https://freesport.ru
NEXT_PUBLIC_API_URL=https://freesport.ru/api/v1
NEXT_PUBLIC_MEDIA_URL=https://freesport.ru
ACTIVE_THEME=coming_soon

